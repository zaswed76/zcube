
#:import stopTouchApp kivy.base.stopTouchApp

<StartScreen>:



    canvas.before:
        Rectangle:
            pos: self.pos
            size: self.size
            source: "resources/icons/bg.jpg"
#            source:
    BoxLayout:
        padding: [20, 20, 5, 0]
        spacing: 50
        FloatLayout:
            size_hint: 1, 1
            orientation: 'vertical'
            MenuButton:
                pos_hint: {'center_y':0.95, "center_x": 0.5}
                text: "Галлерея"
                text_color: 1, 1, 1, 1
                on_press: app.run_view(None)
            MenuButton:
                pos_hint: {'center_y': .80, "center_x": 0.5}
                text: "Браузер"
                text_color: 1, 1, 1, 1
                on_press: app.go_grid_image(None)
            MenuButton:
                pos_hint: {'center_y':.65, "center_x": 0.5}
                text: "Тренажёр"
                text_color: 1, 1, 1, 1
                on_press: app.run_training(None)
            MenuButton:
                pos_hint: {'center_y':.50, "center_x": 0.5}
                text: "Настройки"
                text_color: 1, 1, 1, 1
                on_press: app.run_settings_view(None)
            MenuButton:
                pos_hint: {'center_y':.35, "center_x": 0.5}
                text: "О программе"
                text_color: 1, 1, 1, 1
#                on_press: app.run_grid_image(None)
            MenuButton:
                pos_hint: {'center_y':0.20, "center_x": 0.5}
                text: "Выход"
                text_color: 1, 1, 1, 1
                on_press: stopTouchApp()
