#:import MDCard kivymd.uix.card.MDCard


<ViewCube>:
    tool_bar: tool_bar
    view_float_box: view_float_box
    FloatLayout:
        id: view_float_box
        MDToolbar:
            id: tool_bar
            pos_hint: {'top':1}
            size_hint: 1, 0.1
            right_action_items: [["home", lambda x: app.viewcube.callback_home(x)]]
            left_action_items: [["arrow-left-bold-outline", lambda x: app.viewcube.callback_back(x)], ["shuffle", lambda x: app.shuffle(x)], ["format-list-bulleted", lambda x: app.sort(x)], ["help", lambda x: app.viewcube.hide_help_digit(x)], ["image-outline", lambda x: app.select_numeric(x)]]


