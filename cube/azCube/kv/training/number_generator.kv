<NumButton>:
    background_normal: ''
    background_color: 0.7, .7, .7, .8
    color: 1,1,1,1
#    size_hint_y: 0.3
#    canvas.before:
#        Color:
#            rgba: 0, .6, .8, 1
#        Line:
#            width: 1
