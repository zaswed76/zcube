<GamesScreen>:
    canvas.before:
        Color:
            rgb: utils.get_color_from_hex('#02131a')
        Rectangle:
            pos: self.pos
            size: self.size
    BoxLayout:
        padding: [20, 20, 20, 20]
        spacing: 50
        orientation: 'vertical'
        RoundFlatButton:
            text: 'Галерея'
            on_press: root.manager.current = 'viewcube'
        RoundFlatButton:
            text: 'Игра 2'
        RoundFlatButton:
            text: 'Игра 3'
        RoundFlatButton:
            text: 'Вернуться в меню'
            on_press: root.manager.current = 'menu'