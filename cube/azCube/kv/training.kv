




<TrainingScreen>:
    canvas.before:
        Rectangle:
            pos: self.pos
            size: self.size
            source: "resources/icons/banner-1183445_1920.jpg"

    BoxLayout:
        padding: [20, 20, 5, 0]
        spacing: 50
        FloatLayout:

            size_hint: 1, 1
            orientation: 'vertical'
            MenuButton:
                pos_hint: {'top':1, "center_x": 0.5}
                text: "генератор чисел"
                text_color: 1, 1, 1, 1
                on_press: app.run_number_generator_screen(None)
            MenuButton:
                pos_hint: {'top': .8, "center_x": 0.5}
                text: "генератор образов"
                text_color: 1, 1, 1, 1
                on_press: app.go_grid_image(None)
            MenuButton:
                pos_hint: {'top':.6, "center_x": 0.5}
                text: "Тренажёр"
                text_color: 1, 1, 1, 1
                on_press: app.run_training(None)
            MenuButton:
                pos_hint: {'top':.4, "center_x": 0.5}
                text: "тренажёр"
                text_color: 1, 1, 1, 1
                on_press: app.run_settings_view(None)

            MenuButton:
                pos_hint: {'top':0.2, "center_x": 0.5}
                text: "Главное меню"
                text_color: 1, 1, 1, 1
                on_press: app.screen_manager.current = 'start_screen'