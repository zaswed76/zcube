

<MainContainer>:

    _grid: _grid
    GridLayout:
        pos_hint: {'center_x': .5, 'center_y': .5}
        id: _grid
        cols: 3
        size_hint: 1, 0.7

        canvas:
            Color:
                rgba: 0.9, 0.9, 0.9, 0.9
            Rectangle:
                size: self.size
                pos: self.pos